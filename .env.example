# Shape Battle Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required)
OPENAI_API_KEY=sk-...

# Anthropic API Key (optional, for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Model Configuration
LLM_PROVIDER=openai  # "openai" or "anthropic"
LLM_MODEL=gpt-4o-mini  # or "claude-3-haiku-20240307"

# Grid Configuration (32x32 is recommended for shape battles)
GRID_WIDTH=32
GRID_HEIGHT=32

# Simulation Parameters
NUM_AGENTS=4  # Each agent gets a unique shape to draw
TURNS_PER_GENERATION=100  # More turns for larger grid
NUM_GENERATIONS=3
MUTATION_RATE=0.2
